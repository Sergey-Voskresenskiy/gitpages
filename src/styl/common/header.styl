header
	background transparent
	height 65px
	width 100%
	position fixed
	top 0
	left 0
	z-index 6
	display flex
	align-items center
	justify-content flex-end
	nav
		margin 0 20px 0 0
		background #11141c12
		border-radius 50%
		width 50px
		display flex
		justify-content center
		align-items center
		height 50px
		position relative
		z-index 6
		.btn
			position relative
			z-index 7
			width 25px
			height 25px
			display flex
			flex-direction column
			justify-content space-between
			cursor pointer
			transition transform 330ms ease-out
			&__line
				background-color cadetblue
				border-radius 5px
				width 100%
				height 5px
				&-half
					width 50%
				&-start
					transition transform 330ms cubic-bezier(0.54, -0.81, 0.57, 0.57)
					transform-origin right
				&-end
					align-self flex-end
					transition transform 330ms cubic-bezier(0.54, -0.81, 0.57, 0.57)
					transform-origin left
			&-open
				transform rotate(-45deg)
				.btn__line
					background-color white
				.btn__line-start
					transform rotate(-90deg) translateX(3px)
				.btn__line-end
					transform rotate(-90deg) translateX(-3px);