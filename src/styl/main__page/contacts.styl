.contacts
	min-height 100vh
	width 100vw
	padding 120px 20px 0 20px
	display grid
	grid-template-columns repeat(1, 1fr)
	justify-content center
	align-items center
	background #11141c
	&__container
		h2
			padding-bottom 60px
	&__lists
		align-self baseline
		display grid
		justify-content space-around
		align-items center
		grid-template-columns repeat(1, 1fr)
	&__items
		display grid
		justify-content center
		align-items center
		align-self baseline
	&__item
		display flex
		flex-direction column
		padding 10px
		font-size 18px
		color #708090
		&:hover
			color white

@media (max-width 992px)
	.contacts
		&__item
			padding 10px
			font-size 14px
		&__lists
			grid-template-columns repeat(1, 1fr)